{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/common/typings", "./node_modules/@types"],
    "outDir": "./dist",
    "sourceMap": true // todo check
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": ["shared/**/*.ts", "src/**/*.ts", "index.ts", "test/**/*.ts"] // todo check
}
